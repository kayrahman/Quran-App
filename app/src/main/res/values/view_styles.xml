<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Primary">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Primary.LoginHeader">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Primary.LoginHeader.Sub">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="TextTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_margin">@dimen/spaceNormal</item>
    </style>

    <style name="Text.Sub">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>

    </style>

    <style name="Text.Toolbar">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>

    </style>

    <style name="Text.SurahTitle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/colorOffWhite</item>

    </style>

    <style name="Text.ToolbarTitle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/colorPurpleLight</item>
        <item name="android:layout_marginStart">@dimen/spaceNormal</item>

    </style>




    <style name="Text.title_header">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/largeTextSize</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginTop">@dimen/spaceNormal</item>
        <item name="android:layout_marginBottom">@dimen/spaceNormal</item>


    </style>

    <style name="edittext" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/colorTextBlack</item>


    </style>


    <!--tab text title style-->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="crudTvAppearance" >
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_weight">1</item>
    </style>



    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- <item name="boxStrokeColor">#fff</item>-->
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/colorIdleGray</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>


</resources>