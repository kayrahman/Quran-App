<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spaceNormal"
    android:elevation="@dimen/space4dp"
    >

    <TextView
        android:id="@+id/hc_product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRICE DETAILS"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hc_product_details"
        android:layout_marginTop="@dimen/spaceNormal"
        android:layout_marginBottom="@dimen/spaceNormal"
        />

    <TextView
        android:id="@+id/hc_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price (2 items)"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        />

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tk.450/-"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/hc_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_price"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/tv_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@+id/hc_price"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/tv_delivery"
        android:layout_marginTop="@dimen/spaceNormal"
        android:layout_marginBottom="@dimen/spaceNormal"

        />

    <TextView
        android:id="@+id/hc_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total amount"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
       app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tk.450/-"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="@dimen/spaceNormal"
        android:layout_marginBottom="@dimen/spaceNormal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hc_total_amount"
        />

    <TextView
        android:id="@+id/hc_discount"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="You saved Tk.20/- on this order"
        android:textColor="@color/green"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        app:layout_constraintStart_toStartOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>