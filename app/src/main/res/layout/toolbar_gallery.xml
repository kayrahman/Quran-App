<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.nkr.fashionita.ui.fragment.post.ChoosePhotosViewModel" />
    </data>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="@dimen/space0dp"
        android:contentInsetStart="@dimen/space0dp"
        android:paddingLeft="@dimen/spaceSmall"
        android:paddingRight="@dimen/spaceSmall"
        app:contentInsetLeft="@dimen/space0dp"
        app:contentInsetStart="@dimen/space0dp"
        android:background="@color/colorWhite"
        tools:ignore="MissingPrefix">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/defaultIconSizeLarge"
                android:layout_height="@dimen/defaultIconSizeLarge"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/spaceXSmall"
                app:srcCompat="@drawable/ic_close_black_24dp" />



            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/spaceXSmall"
                android:paddingLeft="@dimen/spaceNormal"
                android:paddingRight="@dimen/spaceNormal"
                android:paddingTop="@dimen/spaceXSmall"
                android:text="@string/label_next"
                android:textColor="@color/colorTextGray"
                android:fontFamily="@font/poppins_bold"
                android:visibility="visible"

                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</layout>