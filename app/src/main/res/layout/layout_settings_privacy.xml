<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.nkr.fashionita.ui.fragment.settingsFragment.SettingsViewModel" />
    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings and Privacy"
        android:textSize="@dimen/textsize_title"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/colorTextDarkGray"
        android:layout_marginBottom="@dimen/spaceNormal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/setting_fm_icon_size"
            android:layout_height="@dimen/setting_fm_icon_size"
            android:src="@drawable/password"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginStart="@dimen/spaceNormal"
            android:textSize="@dimen/normalTextSize"
            android:layout_gravity="center"
            android:textColor="@color/colorTextDarkGray"
            android:fontFamily="@font/poppins"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextGray"
        android:layout_margin="@dimen/spaceNormal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/setting_fm_icon_size"
            android:layout_height="@dimen/setting_fm_icon_size"
            android:src="@drawable/bell"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:layout_marginStart="@dimen/spaceNormal"
            android:textSize="@dimen/normalTextSize"
            android:layout_gravity="center"
            android:textColor="@color/colorTextDarkGray"
            android:fontFamily="@font/poppins"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextGray"
        android:layout_margin="@dimen/spaceNormal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/setting_fm_icon_size"
            android:layout_height="@dimen/setting_fm_icon_size"
            android:src="@drawable/streaming"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Media"
            android:layout_marginStart="@dimen/spaceNormal"
            android:textSize="@dimen/normalTextSize"
            android:layout_gravity="center"
            android:textColor="@color/colorTextDarkGray"
            android:fontFamily="@font/poppins"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextGray"
        android:layout_margin="@dimen/spaceNormal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/setting_fm_icon_size"
            android:layout_height="@dimen/setting_fm_icon_size"
            android:src="@drawable/meyeti_logo"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Meyeti"
            android:layout_marginStart="@dimen/spaceNormal"
            android:textSize="@dimen/normalTextSize"
            android:layout_gravity="center"
            android:textColor="@color/colorTextDarkGray"
            android:fontFamily="@font/poppins"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextGray"
        android:layout_margin="@dimen/spaceNormal"
        />

    <LinearLayout
        android:id="@+id/ll_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/setting_fm_icon_size"
            android:layout_height="@dimen/setting_fm_icon_size"
            android:src="@drawable/logout"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:layout_marginStart="@dimen/spaceNormal"
            android:textSize="@dimen/normalTextSize"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_bold"


            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextGray"
        android:layout_margin="@dimen/spaceNormal"
        />





</LinearLayout>

</layout>