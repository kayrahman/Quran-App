<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.nkr.fashionita.ui.fragment.cart.CartViewModel" />
    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBg"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spaceNormal">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <ImageView
                android:id="@+id/iv_back_fm_cart"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/spaceNormal"
                android:layout_marginRight="@dimen/spaceNormal"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


            <TextView
                android:id="@+id/hc_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Cart"
                android:textColor="@color/colorTextDarkGray"
                android:textSize="@dimen/textsize_large"
                android:layout_weight="1"

                />


            <ImageView
                android:id="@+id/iv_remove_fm_cart"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="@dimen/spaceNormal"
                android:layout_marginRight="@dimen/spaceNormal"
                app:srcCompat="@drawable/ic_delete_24dp"
                android:layout_gravity="center"
                android:padding="@dimen/margin6dp"
                android:background="@drawable/bg_toolbar_icon"

                />

        </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_fm"
                bindingAdapter="@{viewModel.cartGridAdapter}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                showDefaultDividerLine="@{true}"
                defaultRvLayout="@{true}"
                android:layout_marginTop="@dimen/spaceNormal"
                app:layout_constraintBottom_toTopOf="@+id/ll_buy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_back"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/ll_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_cart_fm"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="@dimen/spaceXSmall"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/colorOffWhite"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spaceNormal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_taka_cyan"
                            />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@{viewModel.totalPrice.toString() }"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/textsize_Xmedium"
                        tools:text = "4000"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Total Price"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/textsize_small"
                        android:paddingStart="8dp"

                        />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_login"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Buy now"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>