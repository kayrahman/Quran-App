<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.nkr.fashionita.ui.adapter.viewModel.GalleryGridImageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        >

        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="@dimen/space0dp"
            android:layout_height="@dimen/gridImageHeight"
            android:contentDescription="gallery image"
            android:scaleType="centerCrop"
            app:imageUrlLocal="@{viewModel.img}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="35dp"
            android:layout_height="@dimen/selected_label_size"
            android:background="@color/colorBtnFollow"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normalTextSize"
            android:visibility="@{viewModel.tvCount!=-1 ? View.VISIBLE: View.GONE}"
            android:text="@{Integer.toString(viewModel.tvCount+1)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

