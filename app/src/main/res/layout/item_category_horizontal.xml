<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.nkr.fashionita.ui.adapter.viewModel.CategoryImageListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space4dp"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_category_item"
            android:layout_width="@dimen/defaultIconSizeLarge"
            android:layout_height="@dimen/defaultIconSizeLarge"
            imageUrl="@{viewModel.img}"

            />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.categoryName}"
            style="@style/Text.Sub"
            android:gravity="center"

            />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>