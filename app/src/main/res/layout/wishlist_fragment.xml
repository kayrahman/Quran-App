<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.wishlist.WishlistFragment">

    <data>

        <variable
            name="viewModel"
            type="com.nkr.fashionita.ui.fragment.wishlist.WishlistViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/spaceNormal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_back_fm_wishlist"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                    android:layout_marginLeft="@dimen/spaceNormal"
                    android:layout_marginRight="@dimen/spaceNormal"
                    />



                <TextView
            android:id="@+id/hc_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stuff Liked"
            android:textSize="@dimen/textsize_large"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_empty_wishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have no item in your wishlist"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_large"
                android:visibility="gone"
                />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_wish_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spaceNormal"
            adapterGridHome="@{viewModel.wishListAdapter}"
            app:layout_constraintTop_toBottomOf="@+id/hc_lbl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

